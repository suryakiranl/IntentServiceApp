<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LauncherActivity">

    <TextView android:text="@string/launcher_page_text" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="169dp"
        android:textColor="@color/primary_material_dark"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:textAlignment="center"
        android:id="@+id/launcherPageText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launcher_page_button"
        android:id="@+id/kickOffNowBtn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickKickOffNowBtn" />

</RelativeLayout>
